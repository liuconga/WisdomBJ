<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/OverflowMenuStyle"
        android:background="@drawable/title_red_bg"
   >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <com.liucong.wisdombj.view.NoScrollViewPager
        app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
        android:id="@+id/vp_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


<RadioGroup
    android:id="@+id/rg_fm_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/bottom_tab_bg"
    android:orientation="horizontal"
    >
    <RadioButton
        style="@style/MyRadioButtoStyle"
        android:drawableTop="@drawable/home_selector"
        android:id="@+id/home"
        android:text="首页"
      />
    <RadioButton
        android:id="@+id/news"
       style="@style/MyRadioButtoStyle"
        android:text="新闻中心"
        android:drawableTop="@drawable/news_selector"
        />
    <RadioButton
        android:id="@+id/smart"
        style="@style/MyRadioButtoStyle"
        android:text="智慧服务"

        android:drawableTop="@drawable/smartservice_selector"
        />
    <RadioButton
        android:id="@+id/zw"
        style="@style/MyRadioButtoStyle"
        android:text="政务"
        android:drawableTop="@drawable/zw_selector"
        />
    <RadioButton
        android:id="@+id/setting"
        style="@style/MyRadioButtoStyle"
        android:text="设置"
        android:drawableTop="@drawable/setting_selector"
        />
</RadioGroup>
</android.support.constraint.ConstraintLayout>